    "mongoose": "^8.0.3",
    "tr46": "^5.0.0",
    "whatwg-url": "^14.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "dotenv": "^16.3.1",
    "nodemon": "^3.0.2"
  }
}
